<Window x:Class="TaskManager.View.ModalWindows.UpdateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.View.ModalWindows"
        xmlns:vm="clr-namespace:TaskManager.ViewModel.UpdateProjectViewModel" 
        mc:Ignorable="d"
        Title="UpdateProjectWindow" Height="505" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        d:DataContext="{d:DesignInstance vm:UpdateProjectViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <TextBlock 
            TextAlignment="Center"
            Text="Update project"
            FontWeight="SemiBold"
            FontFamily="Outfit"
            FontSize="30"
            Margin="0,19,0,2"/>

        <TextBlock 
            FontWeight="SemiBold"
            Text="Title:" 
            FontFamily="Outfit"
            FontSize="15"
            Margin="20,8,125,43" Grid.Row="1"/>

        <TextBox
            Text="{Binding UpdatedProject.Title}"
            VerticalAlignment="Center"
            FontSize="15"
            MaxLength="25"
            Grid.Row="1" Margin="20,30,20,10"/>

        <TextBlock 
            FontWeight="SemiBold"
            Text="Description:" 
            FontFamily="Outfit"
            FontSize="15"
            Margin="20,8,170,171" 
            Grid.Row="2"/>

        <TextBox
            Text="{Binding UpdatedProject.Description}"
            FontSize="15"
            MaxLength="25"
            Margin="20,30,20,10"
            Grid.Row="2"/>

        <TextBlock 
            Text="Count of participants:" 
            FontFamily="Outfit"
            FontWeight="SemiBold"
            FontSize="15"
            Margin="20,8,117,43" 
            Grid.Row="3"/>

        <TextBox
            Text="{Binding UpdatedProject.CountParticipants}"
            VerticalAlignment="Center"
            FontSize="15"
            MaxLength="25"
            Grid.Row="3" Margin="20,30,20,10"/>

        <Button Command="{Binding UpdateProjectCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="OK" Grid.Row="3" Margin="20,80,200,-45"/>
        <Button Command="{Binding CloseWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="Cancel" Grid.Row="3" Margin="210,80,10,-45"/>

    </Grid>
</Window>
